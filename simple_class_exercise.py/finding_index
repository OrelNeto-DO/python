colors = ['red', 'blue', 'green', 'yellow', 'blue']
for color in colors:
    if color == 'blue':
        print("the color is:", color)
        break

colors = ['red', 'blue', 'green', 'yellow', 'blue']
first_index_of_blue = colors.index('blue')
print("the first occurrence of blue is at index:", first_index_of_blue)
second_index_of_blue = colors.index('blue', first_index_of_blue + 1)
print("the second occurrence of blue is at index:", second_index_of_blue)